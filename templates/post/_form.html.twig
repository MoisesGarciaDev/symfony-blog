{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
    <div class="mb-3">
        {{ form_label(form.title, 'Título', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.title) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.content, 'Conteúdo', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 8}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.content) }}
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Salvar') }}
        </button>
        <a href="{{ path('app_post_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar à lista
        </a>
    </div>
{{ form_end(form) }}