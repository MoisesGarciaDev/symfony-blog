{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <article class="mb-5">
                    <h1 class="mt-4 mb-3">{{ post.title }}</h1>
                    <p class="text-muted small">
                        Publicado por {{ post.author.email }} em {{ post.createdAt|date('d/m/Y') }}
                    </p>
                    <div class="lead">
                        {{ post.content|raw }}
                    </div>
                </article>

                <hr>

                {# Sección de comentarios #}
                <div class="comments-section mt-5">
                    <h2>Comentários ({{ post.comments|length }})</h2>
                    
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <div class="card bg-light p-4 mb-4">
                            {{ form_start(commentForm) }}
                            <div class="mb-3">
                                {{ form_label(commentForm.content, 'Adicionar um comentário', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(commentForm.content, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                                {{ form_errors(commentForm.content) }}
                            </div>
                            <button type="submit" class="btn btn-primary">Enviar</button>
                            {{ form_end(commentForm) }}
                        </div>
                    {% else %}
                        <div class="alert alert-info" role="alert">
                            <a href="{{ path('app_login') }}">Entre</a> para deixar um comentário.
                        </div>
                    {% endif %}

                    {# Lista de comentarios existentes #}
                    {% for comment in post.comments %}
                        <div class="card mb-3">
                            <div class="card-body">
                                <p class="card-text">{{ comment.content|raw }}</p>
                                <small class="text-muted">
                                    Por <strong>{{ comment.author.email }}</strong> em {{ post.createdAt|date('d/m/Y') }}
                                </small>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-warning">
                            Ainda não há comentários. Seja o primeiro a comentar!
                        </div>
                    {% endfor %}
                </div>

                <div class="d-flex justify-content-between mt-5">
                    <a href="{{ path('app_post_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar à lista
                    </a>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') and post.author == app.user %}
                        <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-outline-primary">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}